---
const { page } = Astro.props;
---
<p class="pagination">
    {(page.currentPage > 1) ? <a href={page.url.prev}><span class="material-icons">
navigate_before
</span></a> : <span><span class="material-icons">
navigate_before
</span></span>}
    <span class="label">Page {page.currentPage} of {page.lastPage}</span>
    {(page.currentPage < page.lastPage) ? <a href={page.url.next}><span class="material-icons">
navigate_next
</span></a> : <span class="material-icons">
navigate_next
</span>}
</p>

<style>
    .pagination {
        padding: 1rem;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        line-height: 24px;
    }
    .label {
        line-height: 24px;
        padding: 0 0.25rem;
    }
</style>